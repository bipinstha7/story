<h1 class="text-capitalize">Welcome {{currentUser.firstName}}</h1>
<h4>Your stories</h4>
{{#if stories}}
<table class="striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Status</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each stories}}
		<tr>
			<td><a href="/stories/show/{{id}}">{{title}}</a></td>
			<td>{{formatDate date "MMM Do YYYY"}}</td>
			<td><span class="text-capitalize">{{status}}</span></td>
			<td>
				<a href="/stories/edit/{{id}}" class="btn left-align"><i class="fa fa-pencil"></i> Edit</a>

				<form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
					<button class="btn red" type="submit"><i class="fa fa-remove"></i> Delete</button>
				</form>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}